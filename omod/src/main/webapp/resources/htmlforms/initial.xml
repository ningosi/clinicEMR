<htmlform formName="Consultations Form"
          formDescription="Initial form for collecting patients information during clinic visit"
          formEncounterType="3345059a-b083-11e9-9d55-8f91276ffdd1"
          formUuid="75c32006-b091-11e9-802a-0f1fdb2a3500"
          formVersion="1.0"
          formAddMetadata="yes"
          formUILocation="patientDashboard.visitActions"
          formOrder="1"
          formIcon="icon-medkit"
          formShowIf=""
          formDisplayStyle="Standard"
          formLabel="Consultations Form">

    <style type="text/css">
        #who-when-where {
        margin-bottom: 6px;
        border-bottom: 1px solid #ccc;
        }

        #who-when-where p {
        display: inline-block;
        padding-right: 20px;
        }

        #where > input[type=text] {
        display: inline-block;
        }

        .field-error {
        color: #ff6666;
        font-size: 1.1em;
        display: block;
        }

        <ifMode mode="VIEW" include="false">
            #data-collection {
            display: inline-block;
            width: 58%;
            vertical-align: top;
            }

            #encounter-diagnoses-target {
            display: inline-block;
            width: 40%;
            vertical-align: top;
            }

            #encounter-diagnoses-app {
            margin-bottom: 20px;
            }
        </ifMode>
    </style>
    <ifMode mode="VIEW" include="false">
        <div id="main-div">
            <div class="headers" style="text-align: center;">
                <h3 style="background:  #00b4ef; padding: 10px; color: #fff;">Consultations Form</h3>
            </div>
            <div>
                <fieldset>
                    <legend>Encounter Details</legend>
                    <table>
                        <tr>
                            <td>Point of consultations:
                                <encounterLocation default="SessionAttribute:emrContext.sessionLocationId" />
                            </td>
                            <td>Name of individual attending to the  patient:
                                <encounterProvider default="currentUser"/>
                            </td>
                            <td>Date of Consultations:
                                <encounterDate default="now" />
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </div>
            <div>
                <ifMode mode="VIEW" include="false">
                    <div class="buttons-container">
                        <div id="buttons">
                            <submit submitClass="confirm right" submitCode="general.save"/>
                            <button type="button" class="cancel">
                                <uimessage code="general.cancel"/>
                            </button>
                        </div>
                    </div>
                </ifMode>
            </div>
        </div>
    </ifMode>
    <div id="data-collection">

        <encounterDiagnoses required="true" selectedDiagnosesTarget="#encounter-diagnoses-target"/>

        <p>
            <label><uimessage code="coreapps.consult.freeTextComments"/></label>
            <obs conceptId="CIEL:162169" style="textarea" rows="5"/>
        </p>

    </div>

    <div id="encounter-diagnoses-target">
    </div>
</htmlform>